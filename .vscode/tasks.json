{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "echo",
      "type": "shell",
      "command": "echo Hello"
    },
    {
      "label": "build",
      "type": "shell",
      "command": "g++",
      "args": ["${file}", "-g", "-o", "${workspaceFolder}/build/${fileBasenameNoExtension}"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "${workspaceFolder}/build/${fileBasenameNoExtension}",
      "dependsOn": ["build"],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
